{
  "manifest_version": 3,
  "name": "Chat With UKG Extension",
  "description": "Enables chat based enhancements to the UKG PRO Suite",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "chat.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "scripts/style.css"
      ],
      "matches": [
        "https://camsworldweb.mia.ucloud.int/*"
      ]
    }
  ],
  "permissions": [
    "webRequest"
  ]
}